<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorPrimary">
    <!-- Keep ripple clipped to the glass silhouette -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_button_fill" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <!-- Soft outer glow for the frosted edge -->
            <item android:alpha="0.10">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/glass_glow"
                        android:centerColor="@android:color/transparent"
                        android:endColor="@android:color/transparent"
                        android:angle="270" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Frosted glass plate -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_button_fill" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/graphite_border_strong" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <!-- Hazy overlay to keep tint while softening -->
            <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" android:alpha="0.18">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_highlight" />
                    <corners android:radius="7dp" />
                </shape>
            </item>
            <!-- Subtle top sheen -->
            <item android:left="2dp" android:top="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/glass_highlight"
                        android:centerColor="@android:color/transparent"
                        android:endColor="@android:color/transparent"
                        android:angle="90" />
                    <corners android:radius="7dp" />
                </shape>
            </item>
            <!-- Content padding -->
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="12dp"
                        android:top="10dp"
                        android:right="12dp"
                        android:bottom="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
