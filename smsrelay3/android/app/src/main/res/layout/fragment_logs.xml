<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glass_panel"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/logs_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logs_header"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logs_filter_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/glass_button"
                style="@style/ButtonSmallGlass"
                android:text="@string/logs_filter_all"
                android:textColor="@color/text_primary" />

            <Button
                android:id="@+id/logs_filter_errors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/glass_button"
                style="@style/ButtonSmallGlass"
                android:text="@string/logs_filter_errors"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logs_export"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/glass_button"
                style="@style/ButtonSmallGlass"
                android:text="@string/logs_export"
                android:textColor="@color/text_primary" />

            <Button
                android:id="@+id/logs_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/glass_button"
                style="@style/ButtonSmallGlass"
                android:text="@string/clear_logs"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <TextView
            android:id="@+id/logs_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/logs_placeholder"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
