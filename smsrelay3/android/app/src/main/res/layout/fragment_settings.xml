<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/settings_actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/glass_panel"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/settings_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_header"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/open_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/glass_button"
            android:text="@string/open_settings"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/open_battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/glass_button"
            android:text="@string/open_battery"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/open_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/glass_button"
            android:text="@string/open_notifications"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/open_autostart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/glass_button"
            android:text="@string/open_autostart"
            android:textColor="@color/text_primary" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/toggle_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/settings_services_toggle"
            android:textColor="@color/text_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/export_config"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/glass_button"
                android:text="@string/export_config"
                android:textColor="@color/text_primary" />

            <Button
                android:id="@+id/import_config"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/glass_button"
                android:text="@string/import_config"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <Button
            android:id="@+id/flush_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/glass_button"
            android:text="@string/flush_queue"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/settings_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/glass_panel"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/settings_actions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
