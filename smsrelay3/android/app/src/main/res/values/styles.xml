<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/graphite_bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/accent_info</item>
        <item name="colorSecondary">@color/accent_info</item>
        <item name="colorSurface">@color/graphite_panel_solid</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorControlActivated">@color/accent_primary</item>
        <item name="colorControlHighlight">@color/accent_primary</item>
        <item name="materialButtonStyle">@style/GlassButton</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlayGlass</item>
    </style>

    <style name="AppTheme.AccentCyan" parent="AppTheme">
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/accent_primary</item>
        <item name="colorSecondary">@color/accent_primary</item>
        <item name="colorControlActivated">@color/accent_primary</item>
        <item name="colorControlHighlight">@color/accent_primary</item>
    </style>

    <style name="AppTheme.AccentIndigo" parent="AppTheme">
        <item name="colorPrimary">@color/accent_info</item>
        <item name="colorPrimaryVariant">@color/accent_info</item>
        <item name="colorSecondary">@color/accent_info</item>
        <item name="colorControlActivated">@color/accent_info</item>
        <item name="colorControlHighlight">@color/accent_info</item>
    </style>

    <style name="AppTheme.AccentMint" parent="AppTheme">
        <item name="colorPrimary">@color/accent_success</item>
        <item name="colorPrimaryVariant">@color/accent_success</item>
        <item name="colorSecondary">@color/accent_success</item>
        <item name="colorControlActivated">@color/accent_success</item>
        <item name="colorControlHighlight">@color/accent_success</item>
    </style>

    <style name="AppTheme.AccentAmber" parent="AppTheme">
        <item name="colorPrimary">@color/accent_warning</item>
        <item name="colorPrimaryVariant">@color/accent_warning</item>
        <item name="colorSecondary">@color/accent_warning</item>
        <item name="colorControlActivated">@color/accent_warning</item>
        <item name="colorControlHighlight">@color/accent_warning</item>
    </style>

    <style name="AppTheme.AccentRose" parent="AppTheme">
        <item name="colorPrimary">@color/accent_danger</item>
        <item name="colorPrimaryVariant">@color/accent_danger</item>
        <item name="colorSecondary">@color/accent_danger</item>
        <item name="colorControlActivated">@color/accent_danger</item>
        <item name="colorControlHighlight">@color/accent_danger</item>
    </style>

    <style name="PreferenceThemeOverlayGlass" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:colorAccent">@color/accent_primary</item>
        <item name="colorAccent">@color/accent_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="TabTextGlass" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="GlassButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/glass_button</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ButtonSmallGlass" parent="GlassButton">
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LogoText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
